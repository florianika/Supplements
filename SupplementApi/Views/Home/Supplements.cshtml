                      <option value="E0172">OTHER</option>
                      <option value="E0177">UNKNOWN</option>
                      <option value="E0155">TABLET</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label for="targetGroup">@Resources.Resources.TargetGroup</label>
                    <select class="form-control" ng-model="targetGroup">
                       <option value="P0250">Four years and above</option>
                       <option value="P0266">Infants children 12M</option>
                       <option value="P0192">Children 12M 4Y</option>
                       <option value="P0253">Pregnant lactating women</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <button type="submit" class="btn btn-primary" ng-click="createQuery()">
                        Submit
                    </button>
                </div>
            </div>
        </div>
